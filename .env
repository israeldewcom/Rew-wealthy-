# Server Configuration
NODE_ENV=production
PORT=5000
CLIENT_URL=https://your-frontend-domain.com

# Database
MONGODB_URI=mongodb://localhost:27017/raw-wealthy-advanced

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-chars
JWT_EXPIRES_IN=30d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Payment Configuration
WITHDRAWAL_FEE_PERCENTAGE=5
PLATFORM_FEE_PERCENTAGE=2
MIN_DEPOSIT_AMOUNT=3500
MIN_WITHDRAWAL_AMOUNT=3500

# Admin Configuration
ADMIN_EMAIL=admin@rawwealthy.com
SUPPORT_EMAIL=support@rawwealthy.com

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Features
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_KYC_VERIFICATION=true
ENABLE_REFERRAL_SYSTEM=true
